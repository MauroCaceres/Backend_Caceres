<h1 style="color:blue;">Vista de productos</h1>

<br>
<a href="/" class="my-3 btn btn-primary">Ir a Formulario</a>
<br>

{{#if hayProductos}}

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody>
    {{#each productos}}
    <tr>
      <td>{{this.nombre}}</td>
      <td>${{this.precio}}</td>
      <td><img width="30" height="30" src="{{this.foto}}"></img></td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{else}}
<div class= "container mt-3 bg-warning py-1">
    <h4>No hay productos</h4>
</div>
{{/if}}